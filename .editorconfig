root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.{md,yml,yaml}]
indent_style = space
indent_size = 2

[*.meta]
indent_style = space
indent_size = 2
